// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId 
  email          String   @unique 
  password       String ?
  usertype       String ?
}

model Student_Info {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId 
  userId        String ?
  lastname      String ?
  firstname     String ?
  middlename    String ?
  address       String ?
  city          String ?
  region        String ? 
  zipcode       String ? 
  birthdate     DateTime @map("birthdate")
  gender        String ?
  civil_status  String ?
  hobby         String []
}